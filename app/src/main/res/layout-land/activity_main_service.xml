<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="cav.theservices.ui.activitys.MainServiceActivity">

    <ImageView
        android:id="@+id/main_service_logo"
        android:src="@drawable/logo_test"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:text="Menu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/main_service_grid"
        android:layout_alignEnd="@+id/main_service_grid"/>
    <LinearLayout
        android:id="@+id/main_service_grid"
        android:orientation="vertical"
        android:layout_marginTop="16dp"
        android:layout_below="@+id/main_service_logo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/ms_lv_1"
                android:orientation="vertical"
                android:background="@android:color/holo_green_light"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingBottom="@dimen/main_grid_padding">
                <ImageView
                    android:id="@+id/ms_img1"
                    android:layout_marginTop="8dp"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/main_grid_img_heigth"/>
                <TextView
                    android:id="@+id/ms_title_1"
                    android:text="Услуга 1"
                    android:gravity="center"
                    style="@style/Title_Grid_Card"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/app_gray"/>

            <LinearLayout
                android:id="@+id/ms_lv_2"
                android:orientation="vertical"
                android:background="@android:color/holo_green_light"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="@dimen/main_grid_padding"
                android:layout_weight="1">
                <ImageView
                    android:id="@+id/ms_img2"
                    android:layout_marginTop="8dp"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/main_grid_img_heigth"/>
                <TextView
                    android:id="@+id/ms_title_2"
                    android:text="Услуга 2"
                    android:gravity="center"
                    style="@style/Title_Grid_Card"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/app_gray"/>

            <LinearLayout
                android:id="@+id/ms_lv_3"
                android:orientation="vertical"
                android:background="@android:color/holo_green_light"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="@dimen/main_grid_padding"
                android:layout_weight="1">
                <ImageView
                    android:id="@+id/ms_img3"
                    android:layout_marginTop="8dp"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/main_grid_img_heigth"/>
                <TextView
                    android:id="@+id/ms_title_3"
                    android:text="Услуга 3"
                    android:gravity="center"
                    style="@style/Title_Grid_Card"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/app_gray"/>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:id="@+id/ms_lv_4"
                android:orientation="vertical"
                android:background="@android:color/holo_green_light"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="@dimen/main_grid_padding"
                android:layout_weight="1">
                <ImageView
                    android:id="@+id/ms_img4"
                    android:layout_marginTop="8dp"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/main_grid_img_heigth"/>
                <TextView
                    android:id="@+id/ms_title_4"
                    android:text="Услуга 4"
                    android:gravity="center"
                    style="@style/Title_Grid_Card"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/app_gray"/>

            <LinearLayout
                android:id="@+id/ms_lv_5"
                android:orientation="vertical"
                android:background="@android:color/holo_green_light"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="@dimen/main_grid_padding"
                android:layout_weight="1">
                <ImageView
                    android:id="@+id/ms_img5"
                    android:layout_marginTop="8dp"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/main_grid_img_heigth"/>
                <TextView
                    android:id="@+id/ms_title_5"
                    android:text="Услуга 5"
                    android:gravity="center"
                    style="@style/Title_Grid_Card"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/app_gray"/>

            <LinearLayout
                android:id="@+id/ms_lv_6"
                android:orientation="vertical"
                android:background="@android:color/holo_green_light"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="@dimen/main_grid_padding"
                android:layout_weight="1">
                <ImageView
                    android:layout_marginTop="8dp"
                    android:layout_gravity="center"
                    android:id="@+id/ms_img6"
                    android:src="@drawable/ic_content_paste_black_24dp"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/main_grid_img_heigth"/>
                <TextView
                    android:id="@+id/ms_title_6"
                    android:text="Другие"
                    android:gravity="center"
                    style="@style/Title_Grid_Card"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>


</RelativeLayout>